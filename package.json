{
  "name": "tiled-layout",
  "version": "1.0.0",
  "type": "module",
  "description": "A desktop app for creating A4/A3 grid-based page layouts",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^7.0.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "svg-to-pdfkit": "^0.1.8",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.tiledlayout.app",
    "productName": "Tiled Layout",
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": "dmg"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
